<!--Edit page for whale so we can supply it name, description, photo, and checkmark if we own it-->
<div class="container">
  <% provide(:title, "Edit whale") %>
  <p class="lead-title text-center text-capitalize addbottom40">Update your whale</p>

  <div class="row clearfix">
    <div class="col-md-8 center text-capitalize">
      <!--Actual form for the editing-->
      <%= form_for @whales, url: user_pod_whale_path do |f| %>
          <!-- %= render 'shared/error_messages' %> -->

          <%= f.label :name %>
          <%= f.text_field :name, :placeholder => "Name", class: 'form-control' %>

          <%= f.label :description %>
          <%= f.text_field :description, :placeholder => "Description", class: 'form-control' %>

          <%= f.file_field :photo %>
          <%= f.check_box(:owned) %>
          <%= f.label(:owned, "I own this whale") %>

          <%= f.submit "Save changes", class: "btn btn-default" %>

      <% end %>

      <p>

      </p>
    </div>
  </div>
</div>
