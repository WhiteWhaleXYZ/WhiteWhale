<!-- The search results page. Acts with the search controller to display a list of pods, whales and users
  that match a certain criteria. -->
<% provide(:title, 'All users') %>
<div class="container">
    <div class="clearfix search-page text-center push-down30 addbottom60">


      <div class="btn-group btn-group-justified text-uppercase addbottom40" role="tablist" id="myTab">
        <div class="btn-group" role="presentation">
          <a href="#whales" aria-controls="whales" role="tab" data-toggle="tab" class="btn btn-xl btn-primary">Whales</a>
        </div>
        <div class="btn-group" role="presentation">
 
          <a href="#pods" aria-controls="pods" role="tab" data-toggle="tab" class="btn btn-xl btn-primary">Pods</a>
        </div>
        <div class="btn-group" role="presentation">
          <a href="#users" aria-controls="users" role="tab" data-toggle="tab" class="btn btn-xl btn-primary">Users</a>
        </div>
      </div>

      <!--<ul class="btn-group btn-group-justified" role="tablist" id="myTab">
        <li role="presentation" class="btn btn-xl btn-default active"><a href="#whales" aria-controls="whales" role="tab" data-toggle="tab">Whales</a></li>
        <li role="presentation" class="btn btn-xl btn-default"><a href="#pods" aria-controls="pods" role="tab" data-toggle="tab">Pods</a></li>
        <li role="presentation" class="btn btn-xl btn-default"><a href="#users" aria-controls="users" role="tab" data-toggle="tab">Users</a></li>
      </ul>-->

      <div class="tab-content">

        <div role="tabpanel" id="whales" class="tab-pane active fade in whales col-md-12">
          <p class="text-center lead-title">Whales</p>
          <div class="row clearfix push-down20">
            <%= render @whaleslist %>
          </div>
        </div>

        <div role="tabpanel" id="pods" class="tab-pane fade pods col-md-12">
          <p class="text-center lead-title">Pods</p>
          <div class="row clearfix push-down20">
            <%= render @podslist %>
          </div>
        </div>

        <div role="tabpanel" id="users" class="tab-pane fade users col-md-12">
            <p class="text-center lead-title">Users</p>
            <div class="row clearfix push-down20">
              <%= render @userslist %>
            </div>
        </div>

      </div>

    </div>


</div>